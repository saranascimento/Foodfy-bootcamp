{% extends "layout.njk" %}

    {% block head %}
        <title>Receitas - Foodfy</title>
        <link rel="stylesheet" href="styles.css">
    {% endblock %}

    {% block content %}
        <section class="cards">
        {% for item in items %}
            <div class="card">
                <div class="card__image-container">
                    <img src="{{item.image}}" alt="imagem de {{item.title}}">
                </div>
                <div class="card__content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card__info">
                    <p>{{item.author}}</p>
                </div>
            </div>
        {% endfor %}
        </section>
        
  {% endblock %}
