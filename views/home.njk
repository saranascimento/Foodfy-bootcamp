{% extends "layout.njk" %}

    {% block head %}
        <title>Home - Foodfy</title>
        <link rel="stylesheet" href="styles.css">
    {% endblock %}

    {% block content %}
        <div id="banner">
            <div id="text-banner">
                <h1>As melhores receitas</h1>
                <p>Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro.</p>
            </div>
        
            <div id="img-chef"> 
                <img src="img/chef.png">
            </div>  
        </div>
        

        <div id="wrapper-title-cards">
            <h1>Mais acessadas</h1>
        </div>


        <section class="cards">
        {% for item in items %}
            <div class="card">
                <div class="card__image-container">
                    <img src="{{item.image}}" alt="imagem de {{item.title}}">
                </div>
                <div class="card__content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card__info">
                    <p>{{item.author}}</p>
                </div>
            </div>
        {% endfor %}
        </section>
            
    {% endblock %}